echo "--------------------"
echo "  BlaCk-Zsh Help"
echo "--------------------\n"

echo "   System Utils"
echo "--------------------"
echo "command: zsh-clean        -> BVZSH bytecode cleaner"
echo "command: zsh-help         -> help message"
echo "command: zsh-update       -> update config files, plugin, clean files"
echo "command: zsh-compile      -> BVZSH compile"
echo "command: font-update      -> nerdFont update\n"

echo "command: history-clear    -> history backup"
echo "command: history-restore  -> history restore\n"

echo "command: zsh-uninstall    -> BVZSH uninstaller\n"

echo "     Utility"
echo "--------------------"
echo "command: ex               -> extract files"
echo "command: img              -> show image with terminal"
echo "command: ip-info          -> show IP information"
echo "command: numfile          -> show number of files"
echo "command: repeat           -> run the command repeatedly"
echo "command: urlshort         -> make url short"
echo "command: weather          -> show weather"
